<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>XerahS.RegionCapture</RootNamespace>
    <AssemblyName>XerahS.RegionCapture</AssemblyName>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT'">net10.0;net10.0-windows10.0.26100.0</TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' != 'Windows_NT'">net10.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>High-performance region capture engine for Avalonia with mixed-DPI support</Description>
    <!-- Platform compatibility warnings - these APIs require Windows Vista+ but that's fine for modern Windows -->
    <NoWarn>$(NoWarn);CA1416;CS1591</NoWarn>
  </PropertyGroup>

  <!-- Windows-specific DWM features -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-windows10.0.26100.0'">
    <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.3.12" />
    <PackageReference Include="Avalonia.Desktop" Version="11.3.12" />
    <PackageReference Include="Avalonia.Skia" Version="11.3.12" />
    <PackageReference Include="SkiaSharp" Version="2.88.9" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0-windows10.0.26100.0'">
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.183" PrivateAssets="all" />
    <PackageReference Include="SkiaSharp.NativeAssets.Win32" Version="2.88.9" />
  </ItemGroup>

  <!-- Keep full RegionCapture API available in net10.0 so cross-compiled hosts can still reference tool surfaces. -->

  <ItemGroup>
    <ProjectReference Include="..\..\core\XerahS.Common\XerahS.Common.csproj" />
    <ProjectReference Include="..\..\core\XerahS.Media\XerahS.Media.csproj" />
    <ProjectReference Include="..\..\..\platform\XerahS.Platform.Abstractions\XerahS.Platform.Abstractions.csproj" />
    <!-- XIP-0023: ShareX.ImageEditor integration -->
    <ProjectReference Include="..\..\..\..\ImageEditor\src\ShareX.ImageEditor\ShareX.ImageEditor.csproj"
                      GlobalPropertiesToRemove="OS;Platform" />
  </ItemGroup>

</Project>
