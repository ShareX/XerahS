<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="XerahS.UI.Views.ProviderCatalogDialog"
             x:DataType="vm:ProviderCatalogViewModel">

    <Grid RowDefinitions="Auto, *, Auto" Margin="24">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="4" Margin="0,0,0,16">
            <TextBlock Text="Select Provider" Theme="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBlock Text="{Binding Category, StringFormat='Category: {0}'}" 
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Theme="{StaticResource CaptionTextBlockStyle}"/>
        </StackPanel>

        <!-- Provider List -->
        <Border Grid.Row="1" Theme="{StaticResource CardBorderTheme}" Padding="0">
            <ListBox ItemsSource="{Binding AvailableProviders}"
                     SelectedItem="{Binding SelectedProvider}"
                     Background="Transparent"
                     BorderThickness="0"
                     AutomationProperties.Name="Available Providers List">
                <ListBox.Styles>
                     <Style Selector="ListBoxItem">
                         <Setter Property="Padding" Value="12,8"/>
                     </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Spacing="4">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Description}" 
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,24,0,0">
            <Button Content="Add" Command="{Binding AddSelectedCommand}" 
                    IsEnabled="{Binding SelectedProvider, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Classes="accent"
                    AutomationProperties.Name="Add Selected Provider"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"
                    AutomationProperties.Name="Cancel Provider Selection"/>
        </StackPanel>
    </Grid>
</UserControl>
