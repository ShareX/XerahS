<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XerahS.Mobile.Maui.Views.LoadingPage"
             Title="XerahS">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <ActivityIndicator IsRunning="True" Color="{StaticResource Primary}"/>
        <Label Text="Initializing XerahS..." HorizontalOptions="Center" TextColor="{AppThemeBinding Light=#888888, Dark=#AAAAAA}"/>
        <Label x:Name="BuildIdLabel" HorizontalOptions="Center" FontSize="32" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>
    </VerticalStackLayout>
</ContentPage>
