<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <Color x:Key="AdaptivePrimaryColor">#0A84FF</Color>
        <SolidColorBrush x:Key="AdaptivePrimaryBrush" Color="{StaticResource AdaptivePrimaryColor}"/>
        <SolidColorBrush x:Key="AdaptiveBackgroundBrush" Color="#F5F5F7"/>
        <SolidColorBrush x:Key="AdaptiveCardBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="AdaptiveInputBrush" Color="#FFE9E9EC"/>
    </Styles.Resources>

    <Style Selector="Grid.adaptive-navbar">
        <Setter Property="Background" Value="{StaticResource AdaptiveBackgroundBrush}"/>
        <Setter Property="Height" Value="56"/>
    </Style>

    <Style Selector="TextBlock.adaptive-navbar-title">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="Button.adaptive-primary">
        <Setter Property="Background" Value="{StaticResource AdaptivePrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button.adaptive-secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBox.adaptive-input">
        <Setter Property="Background" Value="{StaticResource AdaptiveInputBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="MinHeight" Value="44"/>
    </Style>

    <Style Selector="ComboBox.adaptive-input">
        <Setter Property="MinHeight" Value="44"/>
    </Style>

    <Style Selector="Border.adaptive-card">
        <Setter Property="Background" Value="{StaticResource AdaptiveCardBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style Selector="ScrollViewer.adaptive-scroll">
        <Setter Property="ScrollViewer.IsScrollInertiaEnabled" Value="True"/>
    </Style>

</Styles>

