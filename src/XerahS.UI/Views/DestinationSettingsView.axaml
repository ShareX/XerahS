<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             xmlns:controls="using:XerahS.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="XerahS.UI.Views.DestinationSettingsView"
             x:DataType="vm:DestinationSettingsViewModel">

    <Grid ColumnDefinitions="240, *">
        <!-- Category Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0"
                Padding="16">
            <StackPanel Spacing="16">
                <TextBlock Text="Categories" FontWeight="SemiBold"/>
                <ListBox ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         Background="Transparent"
                         AutomationProperties.Name="Destination Categories">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="0,4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *" Margin="24">
            
            <!-- Header -->
            <Grid Grid.Row="0" ColumnDefinitions="*, 16, Auto" Margin="0,0,0,24">
                <TextBlock Grid.Column="0" Text="{Binding SelectedCategory.Name}" 
                           FontSize="26" FontWeight="SemiBold" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Content="Import Config"
                            Command="{Binding ImportShareXConfigCommand}"
                            ToolTip.Tip="Import uploader settings from ShareX"
                            AutomationProperties.Name="Import ShareX Config"/>
                    <Button Content="Plugins Folder"
                            Command="{Binding OpenPluginsFolderCommand}"
                            ToolTip.Tip="Open the plugins folder"
                            AutomationProperties.Name="Open Plugins Folder"/>
                    <Button Content="Add Custom Uploader"
                            Command="{Binding AddCustomUploaderCommand}"
                            ToolTip.Tip="Create a new custom uploader (.sxcu)"
                            AutomationProperties.Name="Add Custom Uploader"/>
                    <Button Content="Add from Catalog"
                            Command="{Binding SelectedCategory.AddFromCatalogCommand}"
                            Classes="accent"
                            AutomationProperties.Name="Add Destination from Catalog"/>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Row="1" ColumnDefinitions="260, 16, *">
                
                <!-- Instance List -->
                <Border Grid.Column="0" 
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="0">
                    <ListBox ItemsSource="{Binding SelectedCategory.Instances}"
                             SelectedItem="{Binding SelectedCategory.SelectedInstance}"
                             Background="Transparent"
                             AutomationProperties.Name="Destination Instances">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto, 12, *, 8, Auto" Margin="4">
                                    <Path Grid.Column="0" 
                                          Data="M12,0A12,12,0,1,0,24,12,12,12,0,0,0,12,0ZM10.8,18.6L4.2,12l1.68-1.68L10.8,15.24l7.32-7.32L19.8,9.6Z"
                                          Fill="{DynamicResource AccentFillColorDefaultBrush}"
                                          Width="12" Height="12"
                                          IsVisible="{Binding IsDefault}"
                                          VerticalAlignment="Center"/>
                                          
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="2">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding FileTypeScopeDisplay}" 
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <Button Grid.Column="4" Content="â‹®" Padding="8,4" Background="Transparent" BorderThickness="0"
                                            AutomationProperties.Name="Instance Options">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuItem Header="Set as Default" 
                                                          Command="{Binding $parent[ListBox].DataContext.SelectedCategory.SetAsDefaultCommand}"
                                                          CommandParameter="{Binding}"/>
                                                <MenuItem Header="Duplicate" 
                                                          Command="{Binding $parent[ListBox].DataContext.SelectedCategory.DuplicateInstanceCommand}"
                                                          CommandParameter="{Binding}"/>
                                                <Separator/>
                                                <MenuItem Header="Remove" 
                                                          Command="{Binding $parent[ListBox].DataContext.SelectedCategory.RemoveInstanceCommand}"
                                                          CommandParameter="{Binding}"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Configuration Panel -->
                <Border Grid.Column="2" 
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="24"
                        IsVisible="{Binding SelectedCategory.SelectedInstance, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <ScrollViewer Padding="0,0,16,0">
                        <StackPanel Spacing="24">
                            
                            <!-- Verification Status -->
                            <StackPanel Spacing="16" IsVisible="{Binding SelectedCategory.SelectedInstance.HasVerificationWarning}">
                                <Border Background="{DynamicResource SystemFillColorCautionBackground}"
                                        BorderBrush="#FFA500" BorderThickness="1" CornerRadius="4" Padding="12"
                                        IsVisible="{Binding SelectedCategory.SelectedInstance.HasVerificationWarning}">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding SelectedCategory.SelectedInstance.VerificationMessage}"
                                                   FontWeight="Medium" Foreground="#FFA500"/>
                                        <Expander Header="Details">
                                            <ItemsControl ItemsSource="{Binding SelectedCategory.SelectedInstance.VerificationIssues}"/>
                                        </Expander>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                             <!-- Error Status -->
                            <StackPanel Spacing="16" IsVisible="{Binding SelectedCategory.SelectedInstance.HasVerificationError}">
                                <Border Background="{DynamicResource SystemFillColorCriticalBackground}"
                                        BorderBrush="#DC3545" BorderThickness="1" CornerRadius="4" Padding="12">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding SelectedCategory.SelectedInstance.VerificationMessage}"
                                                   FontWeight="SemiBold" Foreground="#DC3545"/>
                                        <Expander Header="Fix Instructions" IsExpanded="True">
                                            <ItemsControl ItemsSource="{Binding SelectedCategory.SelectedInstance.VerificationIssues}"/>
                                        </Expander>
                                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                            <Button Content="Clean Duplicates" 
                                                    Command="{Binding SelectedCategory.SelectedInstance.CleanDuplicatesCommand}"
                                                    AutomationProperties.Name="Clean Duplicate Files"/>
                                            <Button Content="Open Folder" 
                                                    Command="{Binding SelectedCategory.SelectedInstance.OpenPluginsFolderCommand}"
                                                    AutomationProperties.Name="Open Provider Folder"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Identity -->
                            <StackPanel Spacing="16">
                                <TextBlock Text="Identity" FontWeight="SemiBold" FontSize="16"/>
                                <Grid ColumnDefinitions="Auto, 16, *" RowDefinitions="Auto, 16, Auto, 16, Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding SelectedCategory.SelectedInstance.DisplayName}" 
                                             Watermark="Display Name" AutomationProperties.Name="Display Name"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Provider:" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding SelectedCategory.SelectedInstance.ProviderId}" 
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Instance ID:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding SelectedCategory.SelectedInstance.InstanceId}"
                                             IsReadOnly="True" FontFamily="Consolas, Monospace" 
                                             Background="{DynamicResource ControlAltFillColorDefaultBrush}"
                                             AutomationProperties.Name="Instance ID"/>
                                </Grid>
                            </StackPanel>

                            <!-- File Type Scope -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="File Type Configuration" FontWeight="SemiBold" FontSize="16"/>
                                <ContentControl Content="{Binding SelectedCategory.SelectedInstance}">
                                    <ContentControl.ContentTemplate>
                                        <DataTemplate>
                                            <controls:FileTypeSelectorControl/>
                                        </DataTemplate>
                                    </ContentControl.ContentTemplate>
                                </ContentControl>
                            </StackPanel>

                            <!-- Custom Config -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Provider Settings" FontWeight="SemiBold" FontSize="16"/>
                                <ContentControl Content="{Binding SelectedCategory.SelectedInstance.ConfigView}"/>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Empty State -->
                <StackPanel Grid.Column="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="16"
                            IsVisible="{Binding SelectedCategory.SelectedInstance, Converter={x:Static ObjectConverters.IsNull}}">
                    <TextBlock Text="No instance selected" 
                               FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    <TextBlock Text="Select an instance or add a new one to configure." 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
