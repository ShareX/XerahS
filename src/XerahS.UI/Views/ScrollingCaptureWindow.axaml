<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:XerahS.UI.ViewModels"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="600"
        x:Class="XerahS.UI.Views.ScrollingCaptureWindow"
        x:DataType="vm:ScrollingCaptureViewModel"
        Title="Scrolling Capture"
        Width="800" Height="600"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

  <Grid RowDefinitions="*,Auto,Auto" Margin="16">

    <!-- Image Preview Area -->
    <Border Grid.Row="0"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1"
            CornerRadius="4"
            ClipToBounds="True">
      <Panel>
        <!-- Placeholder when no image -->
        <TextBlock Text="No capture yet. Click Capture to begin."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                   IsVisible="{Binding !HasResult}" />

        <!-- Scrollable image preview -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      IsVisible="{Binding HasResult}">
          <Image Source="{Binding PreviewImage}"
                 Stretch="None"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        </ScrollViewer>

        <!-- Progress overlay during capture -->
        <Border Background="#80000000"
                IsVisible="{Binding IsCapturing}"
                CornerRadius="4">
          <StackPanel HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Spacing="12">
            <ProgressBar IsIndeterminate="True"
                         Width="200" />
            <TextBlock Text="{Binding StatusText}"
                       Foreground="White"
                       HorizontalAlignment="Center" />
          </StackPanel>
        </Border>
      </Panel>
    </Border>

    <!-- Status Bar -->
    <Grid Grid.Row="1"
          ColumnDefinitions="Auto,*,Auto"
          Margin="0,12,0,0">

      <!-- Status indicator -->
      <StackPanel Grid.Column="0"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Ellipse Width="10" Height="10"
                 VerticalAlignment="Center">
          <Ellipse.Styles>
            <Style Selector="Ellipse">
              <Setter Property="Fill" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            </Style>
          </Ellipse.Styles>
        </Ellipse>
        <TextBlock Text="{Binding StatusText}"
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis"
                   MaxWidth="400" />
      </StackPanel>

      <!-- Result dimensions and frame count -->
      <StackPanel Grid.Column="2"
                  Orientation="Horizontal"
                  Spacing="16"
                  VerticalAlignment="Center">
        <TextBlock Text="{Binding ResultSize}"
                   VerticalAlignment="Center"
                   IsVisible="{Binding HasResult}"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <TextBlock VerticalAlignment="Center"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                   IsVisible="{Binding HasResult}">
          <TextBlock.Text>
            <MultiBinding StringFormat="Frames: {0}">
              <Binding Path="FramesCaptured" />
            </MultiBinding>
          </TextBlock.Text>
        </TextBlock>
      </StackPanel>
    </Grid>

    <!-- Action Buttons -->
    <Grid Grid.Row="2"
          ColumnDefinitions="Auto,Auto,*,Auto,Auto"
          Margin="0,12,0,0">

      <!-- Primary action: Capture / Stop -->
      <Button Grid.Column="0"
              Command="{Binding CaptureCommand}"
              Classes="accent"
              MinWidth="120"
              HorizontalContentAlignment="Center"
              AutomationProperties.Name="Capture scrolling content">
        <TextBlock Text="Capture" />
      </Button>

      <Button Grid.Column="1"
              Content="Stop"
              Command="{Binding StopCaptureCommand}"
              IsVisible="{Binding IsCapturing}"
              Margin="8,0,0,0"
              MinWidth="80"
              HorizontalContentAlignment="Center"
              AutomationProperties.Name="Stop capture" />

      <!-- Secondary actions: Upload, Copy -->
      <Button Grid.Column="3"
              Content="Upload"
              Command="{Binding UploadCommand}"
              IsEnabled="{Binding HasResult}"
              MinWidth="80"
              HorizontalContentAlignment="Center"
              AutomationProperties.Name="Upload captured image" />

      <Button Grid.Column="4"
              Content="Copy"
              Command="{Binding CopyToClipboardCommand}"
              IsEnabled="{Binding HasResult}"
              Margin="8,0,0,0"
              MinWidth="80"
              HorizontalContentAlignment="Center"
              AutomationProperties.Name="Copy image to clipboard" />
    </Grid>
  </Grid>
</Window>
