<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:XerahS.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:hotkeys="using:XerahS.Core.Hotkeys"
        xmlns:views="using:XerahS.UI.Views"
        xmlns:common="clr-namespace:XerahS.Common;assembly=XerahS.Common"
        xmlns:editvm="clr-namespace:ShareX.ImageEditor.ViewModels;assembly=ShareX.ImageEditor"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="650"
        x:Class="XerahS.UI.Views.MainWindow"
        x:DataType="editvm:MainViewModel"
        Title="{x:Static common:AppResources.ProductNameWithVersion}"
        Icon="/Assets/Logo.ico"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Opened="OnWindowOpened">

    <Window.DataTemplates>
        <DataTemplate DataType="{x:Type vm:ProviderCatalogViewModel}">
            <views:ProviderCatalogDialog/>
        </DataTemplate>
    </Window.DataTemplates>

    <Design.DataContext>
        <editvm:MainViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Row 0: Main Menu Bar -->
        <Border Grid.Row="0" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
            <Menu Background="Transparent">
                <!-- File Menu -->
                <MenuItem Header="_File">
                    <MenuItem Header="_Open..." Click="OnOpenImageClick" InputGesture="Ctrl+O"/>
                    <Separator/>
                    <MenuItem Header="_Upload">
                        <MenuItem Header="Upload _File..." Click="OnMenuNavigateClick" Tag="Upload_FileUpload"/>
                        <MenuItem Header="Upload _Content..." Click="OnMenuNavigateClick" Tag="Upload_ClipboardUploadWithContentViewer"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_Save" Command="{Binding SaveCommand}" InputGesture="Ctrl+S"/>
                    <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" InputGesture="Ctrl+Shift+S"/>
                    <Separator/>
                    <MenuItem Header="E_xit" Click="OnExitClick" InputGesture="Alt+F4"/>
                </MenuItem>
                
                <!-- Edit Menu -->
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Undo" Command="{Binding UndoCommand}" InputGesture="Ctrl+Z"/>
                    <MenuItem Header="_Redo" Command="{Binding RedoCommand}" InputGesture="Ctrl+Y"/>
                    <Separator/>
                    <MenuItem Header="_Copy to Clipboard" Command="{Binding CopyCommand}" InputGesture="Ctrl+Shift+C"/>
                </MenuItem>
                
                <!-- View Menu -->
                <MenuItem Header="_View">
                    <MenuItem Header="_Editor" Click="OnMenuNavigateClick" Tag="Editor"/>
                    <MenuItem Header="_History" Click="OnMenuNavigateClick" Tag="History"/>
                    <Separator/>
                    <MenuItem Header="Zoom _In" Command="{Binding ZoomInCommand}" InputGesture="Ctrl++"/>
                    <MenuItem Header="Zoom _Out" Command="{Binding ZoomOutCommand}" InputGesture="Ctrl+-"/>
                    <MenuItem Header="_Reset Zoom" Command="{Binding ResetZoomCommand}" InputGesture="Ctrl+0"/>
                    <MenuItem Header="Zoom to _Fit" Command="{Binding ZoomToFitCommand}" InputGesture="Ctrl+9"/>
                </MenuItem>
                
                <!-- Workflows Menu -->
                <MenuItem Header="_Workflows" Name="WorkflowsMenuItem">
                    <MenuItem Header="_Manage Workflows" Click="OnMenuNavigateClick" Tag="Workflows"/>
                    <Separator/>
                    <MenuItem Header="_Run Workflow" Name="RunWorkflowsMenuItem"/>
                </MenuItem>
                
                <!-- Tools Menu -->
                <MenuItem Header="_Tools">
                    <MenuItem Header="_Color Picker..." Click="OnMenuNavigateClick" Tag="Tools_ColorPicker"/>
                    <MenuItem Header="Pick From _Screen" Click="OnMenuNavigateClick" Tag="Tools_ScreenColorPicker"/>
                    <MenuItem Header="_Ruler" Click="OnMenuNavigateClick" Tag="Tools_Ruler"/>
                    <Separator/>
                    <MenuItem Header="_QR Code">
                        <MenuItem Header="_Generator..." Click="OnMenuNavigateClick" Tag="Tools_QrGenerator"/>
                        <MenuItem Header="Scan from _Screen" Click="OnMenuNavigateClick" Tag="Tools_QrScanScreen"/>
                        <MenuItem Header="Scan from _Region" Click="OnMenuNavigateClick" Tag="Tools_QrScanRegion"/>
                    </MenuItem>
                    <MenuItem Header="_Pin to Screen">
                        <MenuItem Header="From _Screen" Click="OnMenuNavigateClick" Tag="Tools_PinToScreenFromScreen"/>
                        <MenuItem Header="From _Clipboard" Click="OnMenuNavigateClick" Tag="Tools_PinToScreenFromClipboard"/>
                        <MenuItem Header="From _File" Click="OnMenuNavigateClick" Tag="Tools_PinToScreenFromFile"/>
                        <MenuItem Header="Close _All" Click="OnMenuNavigateClick" Tag="Tools_PinToScreenCloseAll"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_OCR" Click="OnMenuNavigateClick" Tag="Tools_OCR"/>
                    <MenuItem Header="_Hash Checker..." Click="OnMenuNavigateClick" Tag="Tools_HashCheck"/>
                    <MenuItem Header="_Index Folder..." Click="OnMenuNavigateClick" Tag="Tools_IndexFolder"/>
                    <Separator/>
                    <MenuItem Header="_Image Combiner..." Click="OnMenuNavigateClick" Tag="Tools_ImageCombiner"/>
                    <MenuItem Header="Image _Splitter..." Click="OnMenuNavigateClick" Tag="Tools_ImageSplitter"/>
                    <MenuItem Header="Image _Thumbnailer..." Click="OnMenuNavigateClick" Tag="Tools_ImageThumbnailer"/>
                    <MenuItem Header="_Analyze Image..." Click="OnMenuNavigateClick" Tag="Tools_AnalyzeImage"/>
                    <Separator/>
                    <MenuItem Header="_Video Converter..." Click="OnMenuNavigateClick" Tag="Tools_VideoConverter"/>
                    <MenuItem Header="Video Thumb_nailer..." Click="OnMenuNavigateClick" Tag="Tools_VideoThumbnailer"/>
                    <Separator/>
                    <MenuItem Header="Clipboard _Viewer" Click="OnMenuNavigateClick" Tag="Tools_ClipboardViewer"/>
                    <MenuItem Header="_Monitor Test" Click="OnMenuNavigateClick" Tag="Tools_MonitorTest"/>
                </MenuItem>
                
                <!-- Settings Menu -->
                <MenuItem Header="_Settings">
                    <MenuItem Header="_Application Settings" Click="OnMenuNavigateClick" Tag="Settings_App"/>
                    <MenuItem Header="_Destination Settings" Click="OnMenuNavigateClick" Tag="Settings_Dest"/>
                </MenuItem>
                
                <!-- Help Menu -->
                <MenuItem Header="_Help">
                    <MenuItem Header="_About" Click="OnMenuNavigateClick" Tag="About"/>
                    <MenuItem Header="_Debug" Click="OnMenuNavigateClick" Tag="Debug"/>
                </MenuItem>
            </Menu>
        </Border>

        <!-- Main Navigation Shell -->
        <ui:NavigationView Grid.Row="1" 
                           Name="NavView" 
                           PaneDisplayMode="Left" 
                           IsPaneOpen="True"
                           IsSettingsVisible="False"
                           SelectionChanged="OnNavSelectionChanged"
                           AutomationProperties.Name="Main Navigation">
            <ui:NavigationView.MenuItems>
                <!-- Capture Section - Items populated dynamically from first 3 workflows -->
                <ui:NavigationViewItem Content="Capture" Tag="Capture" SelectsOnInvoked="False" IsExpanded="True" Name="CaptureNavItem"
                                       AutomationProperties.Name="Capture Menu">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Camera"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="Recording" Tag="Recording" AutomationProperties.Name="Recording View">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Video"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="Editor" Tag="Editor" IsSelected="True" AutomationProperties.Name="Editor View">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Edit"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="History" Tag="History" AutomationProperties.Name="History View">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Clock"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="Workflows" Tag="Workflows" AutomationProperties.Name="Workflows View">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="List"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Upload" Tag="Upload" SelectsOnInvoked="False" IsExpanded="False" AutomationProperties.Name="Upload Menu">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Upload"/>
                    </ui:NavigationViewItem.IconSource>
                    <ui:NavigationViewItem.MenuItems>
                        <ui:NavigationViewItem Content="Upload File..."
                                               Tag="Upload_FileUpload"
                                               AutomationProperties.Name="File Upload"/>
                        <ui:NavigationViewItem Content="Upload Content..."
                                               Tag="Upload_ClipboardUploadWithContentViewer"
                                               AutomationProperties.Name="Upload Content"/>
                    </ui:NavigationViewItem.MenuItems>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="Tools" Tag="Tools" SelectsOnInvoked="True" IsExpanded="False" AutomationProperties.Name="Tools Menu">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Folder"/>
                    </ui:NavigationViewItem.IconSource>
                    <ui:NavigationViewItem.MenuItems>
                        <ui:NavigationViewItem Content="Color Picker..." Tag="Tools_ColorPicker" AutomationProperties.Name="Color Picker Tool"/>
                        <ui:NavigationViewItem Content="Pick From Screen" Tag="Tools_ScreenColorPicker" AutomationProperties.Name="Screen Color Picker Tool"/>
                        <ui:NavigationViewItem Content="Ruler" Tag="Tools_Ruler" AutomationProperties.Name="Ruler Tool"/>
                        <ui:NavigationViewItem Content="Index Folder..." Tag="Tools_IndexFolder" AutomationProperties.Name="Index Folder Tool"/>
                        <ui:NavigationViewItem Content="QR Code" AutomationProperties.Name="QR Code Tools">
                            <ui:NavigationViewItem.MenuItems>
                                <ui:NavigationViewItem Content="Generator..." Tag="Tools_QrGenerator" AutomationProperties.Name="QR Code Generator"/>
                                <ui:NavigationViewItem Content="Scan from screen" Tag="Tools_QrScanScreen" AutomationProperties.Name="Scan QR from Screen"/>
                                <ui:NavigationViewItem Content="Scan from region" Tag="Tools_QrScanRegion" AutomationProperties.Name="Scan QR from Region"/>
                            </ui:NavigationViewItem.MenuItems>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Content="Image Combiner..." Tag="Tools_ImageCombiner" AutomationProperties.Name="Image Combiner Tool"/>
                        <ui:NavigationViewItem Content="Image Splitter..." Tag="Tools_ImageSplitter" AutomationProperties.Name="Image Splitter Tool"/>
                        <ui:NavigationViewItem Content="Image Thumbnailer..." Tag="Tools_ImageThumbnailer" AutomationProperties.Name="Image Thumbnailer Tool"/>
                        <ui:NavigationViewItem Content="Video Converter..." Tag="Tools_VideoConverter" AutomationProperties.Name="Video Converter Tool"/>
                        <ui:NavigationViewItem Content="Video Thumbnailer..." Tag="Tools_VideoThumbnailer" AutomationProperties.Name="Video Thumbnailer Tool"/>
                        <ui:NavigationViewItem Content="Analyze Image..." Tag="Tools_AnalyzeImage" AutomationProperties.Name="Image Analyzer Tool"/>
                        <ui:NavigationViewItem Content="Monitor Test" Tag="Tools_MonitorTest" AutomationProperties.Name="Monitor Test Tool"/>
                    </ui:NavigationViewItem.MenuItems>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="Settings" Tag="Settings" SelectsOnInvoked="True" IsExpanded="True" AutomationProperties.Name="Settings Menu">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Settings"/>
                    </ui:NavigationViewItem.IconSource>
                    <ui:NavigationViewItem.MenuItems>
                        <ui:NavigationViewItem Content="Application Settings" Tag="Settings_App" AutomationProperties.Name="Application Settings"/>
                        <ui:NavigationViewItem Content="Destination Settings" Tag="Settings_Dest" AutomationProperties.Name="Destination Settings"/>
                    </ui:NavigationViewItem.MenuItems>
                 </ui:NavigationViewItem>
                 
                 <ui:NavigationViewItem Content="Debug" Tag="Debug" AutomationProperties.Name="Debug View"
                                        AutomationProperties.HelpText="Opens developer debug tools">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Code"/>
                    </ui:NavigationViewItem.IconSource>
                 </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="About" Tag="About" AutomationProperties.Name="About View">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Important"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.Content>
                 <ContentControl Name="ContentFrame" />
            </ui:NavigationView.Content>
        </ui:NavigationView>

        <!-- Modal Overlay Layer (Bootstrap Style) -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              IsVisible="{Binding IsModalOpen}"
              ZIndex="1000">
            <!-- Backdrop -->
            <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}" 
                    Opacity="0.8"
                    PointerPressed="OnBackdropPointerPressed"/>
            
            <!-- Modal Content Wrapper (Scrollable if needed) -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- Modal Dialog -->
                    <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            MinWidth="400" MaxWidth="800"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Margin="20"
                            BoxShadow="0 4 20 0 #40000000">
                        <ContentControl Content="{Binding ModalContent}"/>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>

</Window>

