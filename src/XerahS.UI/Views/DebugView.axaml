<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="XerahS.UI.Views.DebugView"
             x:DataType="vm:DebugViewModel">
    
    <Design.DataContext>
        <vm:DebugViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Toolbar -->
        <Border Grid.Row="0" Padding="16" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                BorderThickness="0,0,0,1" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <Button Command="{Binding OpenLogsFolderCommand}" Content="Open Logs Folder" AutomationProperties.Name="Open Logs Folder"/>
                <Button Command="{Binding OpenSettingsFolderCommand}" Content="Open Settings Folder" AutomationProperties.Name="Open Settings Folder"/>
                <Button Command="{Binding CopyCommand}" Content="Copy" AutomationProperties.Name="Copy Log"/>
                <Button Command="{Binding ClearCommand}" Content="Clear" AutomationProperties.Name="Clear Log"/>
                <Button Command="{Binding UploadCommand}" Content="Upload" AutomationProperties.Name="Upload Log"/>
            </StackPanel>
        </Border>

        <!-- Diagnostics -->
        <Border Grid.Row="1" Padding="16" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                BorderThickness="0,0,0,1" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
            <StackPanel Spacing="4">
                <TextBlock Text="Secret Store Diagnostics" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SecretStoreBackendName, StringFormat=Backend: {0}}"/>
                <TextBlock Text="{Binding SecretStoreBackendStatus, StringFormat=Status: {0}}"/>
                <TextBlock Text="{Binding SecretStoreBackendDetails, StringFormat=Details: {0}}"/>
            </StackPanel>
        </Border>

        <!-- Log Output -->
        <TextBox Grid.Row="2" 
                 Text="{Binding LogText}"
                 IsReadOnly="True"
                 FontFamily="Consolas, Monospace"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 BorderThickness="0"
                 Background="Transparent"
                 Padding="16"
                 AutomationProperties.Name="Log Output"
                 SelectionBrush="{DynamicResource SystemControlHighlightListAccentLowBrush}"/>
    </Grid>
</UserControl>
