<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:XerahS.UI.ViewModels"
        xmlns:views="using:XerahS.UI.Views"
        xmlns:converters="using:XerahS.UI.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="XerahS.UI.Views.WorkflowEditorView"
        x:DataType="vm:WorkflowEditorViewModel"
        Title="{Binding WindowTitle}"
        Width="850" Height="650"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="*,Auto" Margin="12">
        
        <!-- Main Tabs -->
        <TabControl Grid.Row="0" Margin="0,0,0,12">
            
            <!-- Tab 1: Task (Trigger & Job) -->
            <TabItem Header="Task">
                <ScrollViewer>
                    <StackPanel Margin="24" Spacing="24">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Workflow ID" Theme="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBox Text="{Binding WorkflowId}"
                                     IsReadOnly="True"
                                     FontFamily="Consolas, Monospace"
                                     Theme="{StaticResource SimpleTextBoxStyle}"
                                     AutomationProperties.Name="Workflow ID (ReadOnly)"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Description" Theme="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBox Text="{Binding Description}" 
                                     Watermark="Optional description"
                                     AutomationProperties.Name="Workflow Description"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Task" Theme="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Grid ColumnDefinitions="*, 12, *">
                                <ComboBox Grid.Column="0" 
                                          ItemsSource="{Binding JobCategories}" 
                                          SelectedItem="{Binding SelectedJobCategory}"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Select Category"
                                          AutomationProperties.Name="Job Category Selection">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <ComboBox Grid.Column="2" 
                                          ItemsSource="{Binding SelectedJobCategory.Jobs}" 
                                          SelectedItem="{Binding SelectedJobItem}"
                                          IsEnabled="{Binding SelectedJobCategory, Converter={x:Static ObjectConverters.IsNotNull}}"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Select Task"
                                          AutomationProperties.Name="Job Task Selection">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Hotkey" Theme="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <Border Grid.Column="0" 
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4" 
                                        MinWidth="150">
                                    <Button x:Name="HotkeyButton"
                                            Content="{Binding KeyText}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontFamily="Consolas, Monospace"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Padding="10,6"
                                            HorizontalAlignment="Stretch"
                                            Focusable="True"
                                            Cursor="Hand"
                                            Click="HotkeyButton_Click"
                                            AutomationProperties.Name="Hotkey Recorder Button"/>
                                </Border>
                                <Button Grid.Column="1" 
                                        Content="Clear" 
                                        Command="{Binding ClearCommand}" 
                                        AutomationProperties.Name="Clear Hotkey"/>
                            </Grid>
                            <TextBlock Text="Click to record. Press Escape to cancel." 
                                       Theme="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 2: Settings -->
            <TabItem Header="Settings">
                <views:TaskSettingsPanel DataContext="{Binding TaskSettings}"
                                         HorizontalAlignment="Stretch" 
                                         VerticalAlignment="Stretch"/>
            </TabItem>

            <!-- Tab 3: Index Folder -->
            <TabItem Header="Index Folder" IsVisible="{Binding TaskSettings.IsIndexFolderJob}">
                <views:IndexFolderView DataContext="{Binding IndexFolderConfig}"/>
            </TabItem>

            <!-- Tab 4: Destinations -->
            <TabItem Header="Destinations" IsVisible="{Binding TaskSettings.UploadImageToHost}">
                <Grid RowDefinitions="Auto, *" Margin="24">
                    <TextBlock Text="Select Destination" Theme="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <ComboBox Grid.Row="1" 
                              ItemsSource="{Binding AvailableDestinations}" 
                              SelectedItem="{Binding SelectedDestination}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top"
                              PlaceholderText="Select default destination for this workflow"
                              AutomationProperties.Name="Destination Selection">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="vm:UploaderInstanceViewModel">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="{Binding DisplayName}"/>
                                    <TextBlock Text="{Binding Category}" 
                                               Theme="{StaticResource CaptionTextBlockStyle}" 
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                 </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
            <Button Content="OK" Click="OkButton_Click" IsDefault="True" Width="80" Classes="accent" AutomationProperties.Name="OK"/>
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True" Width="80" AutomationProperties.Name="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
