<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="XerahS.UI.Views.WindowSelectorDialog"
             x:DataType="vm:WindowSelectorViewModel">

    <Grid RowDefinitions="Auto,*,Auto" Margin="24">
        <TextBlock Text="Select Window" Theme="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

        <Border Grid.Row="1" Theme="{StaticResource CardBorderTheme}">
            <ListBox ItemsSource="{Binding Windows}" 
                     SelectedItem="{Binding SelectedWindow}"
                     SelectionMode="Single" 
                     Background="Transparent"
                     AutomationProperties.Name="Window List">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*" Margin="0,4">
                            <!-- Icon placeholder if needed later -->
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Title}" 
                                       VerticalAlignment="Center" 
                                       TextTrimming="CharacterEllipsis"
                                       Theme="{StaticResource BodyTextBlockStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,24,0,0">
            <Button Content="Refresh" Command="{Binding RefreshWindowsCommand}" AutomationProperties.Name="Refresh Windows"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" AutomationProperties.Name="Cancel"/>
            <Button Content="Capture" Command="{Binding ConfirmCommand}" Classes="accent" IsDefault="True" AutomationProperties.Name="Capture Selected Window"/>
        </StackPanel>
    </Grid>
</UserControl>
