<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:XerahS.UI.ViewModels"
        xmlns:cp="clr-namespace:Avalonia.Controls.Primitives;assembly=Avalonia.Controls.ColorPicker"
        xmlns:cpControls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
        mc:Ignorable="d"
        x:Class="XerahS.UI.Views.ColorPickerDialog"
        x:DataType="vm:ColorPickerViewModel"
        Width="940"
        MinWidth="760"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Title="Color Picker">

    <Design.DataContext>
        <vm:ColorPickerViewModel />
    </Design.DataContext>

    <Grid Margin="20" ColumnDefinitions="2*,*" RowDefinitions="Auto,*">
        <StackPanel Grid.ColumnSpan="2" Spacing="4">
            <TextBlock Text="Color Picker" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Pick a color, edit values, or sample any pixel on screen."
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" RowDefinitions="*,Auto" Margin="0,16,16,0">
            <Border Grid.Row="0" Grid.Column="0"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="8">
                <cp:ColorSpectrum Color="{Binding SelectedColor, Mode=TwoWay}"
                                  Components="{x:Static cpControls:ColorSpectrumComponents.HueSaturation}"
                                  Shape="{x:Static cpControls:ColorSpectrumShape.Box}"
                                  MinHeight="320"
                                  MinWidth="320"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1"
                    Margin="12,0,0,0"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="6">
                <cp:ColorSlider Orientation="Vertical"
                                Color="{Binding SelectedColor, Mode=TwoWay}"
                                ColorModel="{x:Static cpControls:ColorModel.Hsva}"
                                ColorComponent="{x:Static cpControls:ColorComponent.Component3}"
                                IsAlphaVisible="False"
                                MinHeight="320"
                                Width="28"/>
            </Border>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="10" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Recent colors" FontWeight="SemiBold"/>
                    <ItemsControl ItemsSource="{Binding RecentColors}" IsVisible="{Binding HasRecentColors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectSwatchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Padding="0"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,6,6">
                                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#30000000">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding}"/>
                                        </Border.Background>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="No recent colors yet."
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               IsVisible="{Binding HasNoRecentColors}"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Palette" FontWeight="SemiBold"/>
                    <ItemsControl ItemsSource="{Binding StandardColors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectSwatchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Padding="0"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,6,6">
                                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#30000000">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding}"/>
                                        </Border.Background>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="14">
                <Border BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Preview" FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <StackPanel>
                                <TextBlock Text="Previous" FontSize="11"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <Border Height="48" CornerRadius="6" BorderBrush="#30000000" BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding PreviousColor}"/>
                                    </Border.Background>
                                </Border>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Current" FontSize="11"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <Border Height="48" CornerRadius="6" BorderBrush="#30000000" BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding SelectedColor}"/>
                                    </Border.Background>
                                </Border>
                            </StackPanel>
                        </Grid>
                        <Button Content="Pick from screen"
                                Command="{Binding PickFromScreenCommand}"
                                IsEnabled="{Binding CanPickFromScreen}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Values" FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                            <TextBlock Text="R" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding Red, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Column="2" Text="G" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3" Text="{Binding Green, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Column="4" Text="B" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="5" Text="{Binding Blue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>

                            <TextBlock Grid.Row="1" Text="H" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Hue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="S" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Saturation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="B" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding Brightness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>

                            <TextBlock Grid.Row="2" Text="C" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Cyan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="M" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Magenta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Row="2" Grid.Column="4" Text="Y" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="5" Text="{Binding Yellow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>

                            <TextBlock Grid.Row="3" Text="K" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Hex" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3"
                                     Text="{Binding Hex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="160"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Copy" FontWeight="SemiBold"/>
                        <WrapPanel Orientation="Horizontal">
                            <Button Content="Copy Hex" Command="{Binding CopyHexCommand}" Margin="0,0,8,8"/>
                            <Button Content="Copy RGB" Command="{Binding CopyRgbCommand}" Margin="0,0,8,8"/>
                            <Button Content="Copy HSB" Command="{Binding CopyHsbCommand}" Margin="0,0,8,8"/>
                            <Button Content="Copy CMYK" Command="{Binding CopyCmykCommand}" Margin="0,0,8,8"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                        BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
