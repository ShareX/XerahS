<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="40"
             x:Class="XerahS.UI.Views.Controls.HotkeySelectionControl"
             x:DataType="vm:HotkeyItemViewModel">
    <UserControl.Styles>
        <Style Selector="Border.highlighted">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorLowBrush}" />
        </Style>
        <Style Selector="Border:not(.highlighted)">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
        </Style>
    </UserControl.Styles>

    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
            BorderThickness="1" 
            CornerRadius="4" 
            Padding="8,4"
            Classes.highlighted="{Binding IsHighlighted}">
        <Grid ColumnDefinitions="Auto,Auto,Auto,*,Auto">
            <!-- Status Icon -->
            <Ellipse Grid.Column="0" 
                     Width="10" Height="10" 
                     Margin="0,0,10,0"
                     VerticalAlignment="Center"
                     Fill="{Binding Status, Converter={x:Static vm:HotkeyStatusColorConverter.Instance}}"/>

            <!-- Nav Label -->
            <Border Grid.Column="1"
                    Background="{DynamicResource SystemAccentColor}"
                    CornerRadius="3"
                    Padding="4,2"
                    Margin="0,0,4,0"
                    IsVisible="{Binding NavLabelVisible}"
                    VerticalAlignment="Center">
                <TextBlock Text="Nav" 
                           FontSize="10" 
                           Foreground="White" 
                           FontWeight="Bold"/>
            </Border>

            <!-- Tray Label -->
            <Border Grid.Column="2"
                    Background="{DynamicResource SystemAccentColor}"
                    CornerRadius="3"
                    Padding="4,2"
                    Margin="0,0,8,0"
                    IsVisible="{Binding TrayLabelVisible}"
                    VerticalAlignment="Center">
                <TextBlock Text="Tray" 
                           FontSize="10" 
                           Foreground="White" 
                           FontWeight="Bold"/>
            </Border>
            
            <!-- Task Description (Dropdown button) -->
            <Button Grid.Column="3" 
                    x:Name="TaskButton"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="5,2"
                    Click="TaskButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Description}" 
                               FontWeight="{Binding IsSelected, Converter={x:Static vm:BoolToFontWeightConverter.Instance}}"
                               VerticalAlignment="Center"/>

                </StackPanel>
                <Button.ContextMenu>
                    <ContextMenu x:Name="TaskContextMenu"/>
                </Button.ContextMenu>
            </Button>
            
            <!-- Hotkey Capture Button -->
            <Border Grid.Column="4" 
                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                    CornerRadius="3" 
                    Margin="10,0"
                    MinWidth="150">
                <Button x:Name="HotkeyButton"
                        Content="{Binding KeyString}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Consolas, Monospace"
                        FontWeight="Bold"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Padding="10,4"
                        Focusable="True"
                        Cursor="Hand"
                        Click="HotkeyButton_Click"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
