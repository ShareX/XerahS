<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             xmlns:views="using:XerahS.UI.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="XerahS.UI.Views.HotkeySettingsView"
             x:DataType="vm:HotkeySettingsViewModel">

    <Design.DataContext>
        <vm:HotkeySettingsViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        <TextBlock Grid.Row="0" Text="Hotkey Settings" FontSize="26" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <!-- Action Buttons moved to top -->
            <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                <Button Content="Add" Command="{Binding AddCommand}" MinWidth="90" Margin="0,0,10,10"/>
                <Button Content="Remove" Command="{Binding RemoveCommand}" MinWidth="90" Margin="0,0,10,10"/>
                <Button Content="Duplicate" Command="{Binding DuplicateCommand}" MinWidth="90" Margin="0,0,10,10"/>
                <Button Content="Move Up" Command="{Binding MoveUpCommand}" MinWidth="90" Margin="0,0,10,10"/>
                <Button Content="Move Down" Command="{Binding MoveDownCommand}" MinWidth="90" Margin="0,0,10,10"/>
                <Button Content="Reset" Command="{Binding ResetCommand}" MinWidth="90" Margin="0,0,10,10"/>
            </WrapPanel>

            <!-- Hotkey List using HotkeySelectionControl -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Hotkeys}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:HotkeySelectionControl Margin="0,0,0,5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        
        <!-- Debug Info Toggle -->
        <CheckBox Grid.Row="2" 
                  x:Name="ShowDebugCheckBox"
                  Content="View Debug Info" 
                  Margin="0,10,0,5"/>
        
        <!-- DEBUG: Event Log TextBox (collapsible) -->
        <Border Grid.Row="3" 
                BorderBrush="Orange" 
                BorderThickness="2" 
                CornerRadius="4"
                Height="300"
                IsVisible="{Binding #ShowDebugCheckBox.IsChecked}">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" 
                           Text="DEBUG LOG (copy and paste this):" 
                           Foreground="Orange" 
                           FontWeight="Bold" 
                           Margin="5"/>
                <TextBox Grid.Row="1" 
                         x:Name="DebugLogTextBox"
                         AcceptsReturn="True" 
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         Foreground="Lime"
                         Background="#1E1E1E"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
