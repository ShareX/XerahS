<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShareX.Avalonia.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ShareX.Avalonia.UI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="ShareX"
        Width="1200" Height="800"
        Background="#1E1E2E"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto,Auto">
        
        <!-- Header Row with Logo and Window Controls -->
        <Grid Grid.Row="0" Height="40" Background="#1E1E2E" ColumnDefinitions="*,Auto">
            <TextBlock Grid.Column="0" 
                       Text="ShareX" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
            
            <!-- Window Controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="0">
                <Button Content="â€”" Width="46" Height="40" 
                        Background="Transparent" 
                        Foreground="White"
                        Click="OnMinimizeClick"/>
                <Button Content="â–¡" Width="46" Height="40" 
                        Background="Transparent" 
                        Foreground="White"
                        Click="OnMaximizeClick"/>
                <Button Content="âœ•" Width="46" Height="40" 
                        Background="Transparent" 
                        Foreground="White"
                        Click="OnCloseClick"/>
            </StackPanel>
        </Grid>

        <!-- Row 1: Capture Toolbar -->
        <Border Grid.Row="1" Background="#252535" Padding="16,12">
            <DockPanel>
                <!-- Capture Buttons (Left) -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding CaptureFullscreenCommand}"
                            Background="#8B5CF6"
                            Foreground="White"
                            Padding="16,10"
                            CornerRadius="12"
                            FontWeight="SemiBold">
                        Fullscreen
                    </Button>
                    <Button Command="{Binding CaptureRegionCommand}"
                            Background="#14B8A6"
                            Foreground="White"
                            Padding="16,10"
                            CornerRadius="12"
                            FontWeight="SemiBold">
                        Region
                    </Button>
                    <Button Command="{Binding CaptureWindowCommand}"
                            Background="#EC4899"
                            Foreground="White"
                            Padding="16,10"
                            CornerRadius="12"
                            FontWeight="SemiBold">
                        Window
                    </Button>
                    <Button Command="{Binding ClearCommand}"
                            Background="Transparent"
                            BorderBrush="#FFFFFF1A"
                            BorderThickness="1"
                            Foreground="White"
                            Padding="16,10"
                            CornerRadius="12"
                            IsVisible="{Binding HasPreviewImage}">
                        Clear
                    </Button>
                </StackPanel>
                
                <!-- Settings Button (Right) -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="8">
                    <Button Content="âš™" 
                            Width="40" Height="40"
                            Background="#FFFFFF0D"
                            Foreground="#94A3B8"
                            CornerRadius="12"
                            ToolTip.Tip="Settings"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Row 2: Annotation Toolbar (only visible when screenshot exists) -->
        <Border Grid.Row="2" 
                Background="#2A2A3E" 
                Padding="12,8"
                IsVisible="{Binding HasPreviewImage}">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <!-- Section 1: Tools -->
                <Border BorderThickness="0,0,1,0" BorderBrush="#FFFFFF1A" Padding="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Content="Select" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Select (V)"/>
                        <Button Content="â–­" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Rectangle (R)"/>
                        <Button Content="â—‹" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Ellipse (E)"/>
                        <Button Content="â†’" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Arrow (A)"/>
                        <Button Content="â€”" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Line (L)"/>
                        <Button Content="T" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Text (T)"/>
                        <Button Content="#" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Number (N)"/>
                        <Button Content="ðŸ’¡" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Spotlight (S)"/>
                        <Button Content="âœ‚" Width="40" Height="40" Background="#374151" Foreground="White" CornerRadius="8" ToolTip.Tip="Crop (C)"/>
                    </StackPanel>
                </Border>
                
                <!-- Section 2: Color Picker-->
                <Border BorderThickness="0,0,1,0" BorderBrush="#FFFFFF1A" Padding="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Color" FontSize="11" Foreground="#94A3B8" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Border Width="24" Height="24" Background="#EF4444" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#F97316" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#EAB308" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#22C55E" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#0EA5E9" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#6366F1" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#A855F7" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#EC4899" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#FFFFFF" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#000000" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#64748B" CornerRadius="4" Cursor="Hand"/>
                            <Border Width="24" Height="24" Background="#1E293B" CornerRadius="4" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Section 3: Stroke Width -->
                <Border BorderThickness="0,0,1,0" BorderBrush="#FFFFFF1A" Padding="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Width" FontSize="11" Foreground="#94A3B8" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Button Width="32" Height="32" Background="#FFFFFF0D" CornerRadius="8" ToolTip.Tip="2px">
                                <Ellipse Width="4" Height="4" Fill="#94A3B8"/>
                            </Button>
                            <Button Width="32" Height="32" Background="#FFFFFF0D" CornerRadius="8" ToolTip.Tip="4px">
                                <Ellipse Width="6" Height="6" Fill="#94A3B8"/>
                            </Button>
                            <Button Width="32" Height="32" Background="#FFFFFF0D" CornerRadius="8" ToolTip.Tip="6px">
                                <Ellipse Width="8" Height="8" Fill="#94A3B8"/>
                            </Button>
                            <Button Width="32" Height="32" Background="#FFFFFF0D" CornerRadius="8" ToolTip.Tip="8px">
                                <Ellipse Width="10" Height="10" Fill="#94A3B8"/>
                            </Button>
                            <Button Width="32" Height="32" Background="#FFFFFF0D" CornerRadius="8" ToolTip.Tip="10px">
                                <Ellipse Width="12" Height="12" Fill="#94A3B8"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Section 4: Undo/Redo -->
                <Border BorderThickness="0,0,1,0" BorderBrush="#FFFFFF1A" Padding="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Content="â†¶" Width="32" Height="32" Background="#FFFFFF0D" Foreground="#94A3B8" CornerRadius="8" ToolTip.Tip="Undo (Ctrl+Z)"/>
                        <Button Content="â†·" Width="32" Height="32" Background="#FFFFFF0D" Foreground="#94A3B8" CornerRadius="8" ToolTip.Tip="Redo (Ctrl+Shift+Z)"/>
                    </StackPanel>
                </Border>
                
                <!-- Section 5: Delete -->
                <Button Content="ðŸ—‘" Width="32" Height="32" Background="#FFFFFF0D" Foreground="#F43F5E" CornerRadius="8" ToolTip.Tip="Delete Selected (Del)"/>
            </StackPanel>
        </Border>

        <!-- Row 3: Main Content Area with Preview and Sidebar -->
        <Grid Grid.Row="3" ColumnDefinitions="*,288">
            
            <!-- Central Preview Canvas -->
            <Grid Grid.Column="0" Margin="20">
                <Border Background="{Binding CanvasBackground}"
                        CornerRadius="{Binding CanvasCornerRadius}"
                        Padding="{Binding CanvasPadding}"
                        BoxShadow="{Binding CanvasShadow}">
                    <!-- Preview Image -->
                    <Border Background="#FFFFFF"
                            CornerRadius="{Binding PreviewCornerRadius}"
                            ClipToBounds="True">
                        <Grid>
                            <Image Source="{Binding PreviewImage}"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            
                            <!-- Placeholder when no image -->
                            <TextBlock Text="No image captured"
                                       Foreground="#6B7280"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding !HasPreviewImage}"/>
                        </Grid>
                    </Border>
                </Border>
            </Grid>

            <!-- Right Sidebar (Settings Panel) -->
            <Border Grid.Column="1" Background="#252535" Padding="20">
                <ScrollViewer>
                    <StackPanel Spacing="25">
                        <TextBlock Text="Settings" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>

                        <!-- Padding Slider -->
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="Padding" Foreground="#9CA3AF"/>
                                <TextBlock Grid.Column="1" Text="{Binding PreviewPadding, StringFormat='{}{0}px'}" Foreground="White"/>
                            </Grid>
                            <Slider Minimum="0" 
                                    Maximum="200" 
                                    Value="{Binding PreviewPadding}"
                                    Background="#374151"/>
                        </StackPanel>

                        <!-- Corner Radius Slider -->
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="Corner Radius" Foreground="#9CA3AF"/>
                                <TextBlock Grid.Column="1" Text="{Binding PreviewCornerRadius, StringFormat='{}{0}px'}" Foreground="White"/>
                            </Grid>
                            <Slider Minimum="0" 
                                    Maximum="50" 
                                    Value="{Binding PreviewCornerRadius}"
                                    Background="#374151"/>
                        </StackPanel>

                        <!-- Shadow Blur Slider -->
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="Shadow Blur" Foreground="#9CA3AF"/>
                                <TextBlock Grid.Column="1" Text="{Binding ShadowBlur, StringFormat='{}{0}px'}" Foreground="White"/>
                            </Grid>
                            <Slider Minimum="0" 
                                    Maximum="100" 
                                    Value="{Binding ShadowBlur}"
                                    Background="#374151"/>
                        </StackPanel>

                        <!-- Output Ratio -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Output Ratio" Foreground="#9CA3AF"/>
                            <UniformGrid Columns="3" Rows="2">
                                <Button Content="Auto" Margin="2" Background="#374151" Foreground="White" CornerRadius="8"/>
                                <Button Content="1:1" Margin="2" Background="#374151" Foreground="White" CornerRadius="8"/>
                                <Button Content="4:3" Margin="2" Background="#374151" Foreground="White" CornerRadius="8"/>
                                <Button Content="16:9" Margin="2" Background="#374151" Foreground="White" CornerRadius="8"/>
                                <Button Content="9:16" Margin="2" Background="#374151" Foreground="White" CornerRadius="8"/>
                                <Button Content="21:9" Margin="2" Background="#374151" Foreground="White" CornerRadius="8"/>
                            </UniformGrid>
                        </StackPanel>

                        <!-- Background Selection -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Background" Foreground="#9CA3AF"/>
                            <UniformGrid Columns="4" Rows="2">
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Cursor="Hand">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#667EEA" Offset="0"/>
                                            <GradientStop Color="#764BA2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#1E3A8A" Cursor="Hand"/>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#F59E0B" Cursor="Hand"/>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#10B981" Cursor="Hand"/>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#EF4444" Cursor="Hand"/>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#8B5CF6" Cursor="Hand"/>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#EC4899" Cursor="Hand"/>
                                <Border Width="50" Height="50" Margin="4" CornerRadius="10" Background="#374151" Cursor="Hand"/>
                            </UniformGrid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Row 4: Export Toolbar (only visible when screenshot exists) -->
        <Border Grid.Row="4" 
                Background="#252535" 
                Padding="12,10"
                IsVisible="{Binding HasPreviewImage}">
            <DockPanel>
                <!-- Format Selection (Left) -->
                <Border DockPanel.Dock="Left" 
                        BorderThickness="0,0,1,0" 
                        BorderBrush="#FFFFFF1A" 
                        Padding="0,0,12,0"
                        Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Format" FontSize="11" Foreground="#94A3B8" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Button Content="PNG" 
                                    Width="60" Height="28"
                                    Background="#8B5CF6"
                                    Foreground="White"
                                    CornerRadius="8"
                                    FontSize="11"
                                    FontWeight="SemiBold"/>
                            <Button Content="JPEG" 
                                    Width="60" Height="28"
                                    Background="#FFFFFF0D"
                                    BorderBrush="#FFFFFF0F"
                                    BorderThickness="1"
                                    Foreground="White"
                                    CornerRadius="8"
                                    FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Export Actions (Center-Right) -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding CopyCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="ðŸ“‹" FontSize="14"/>
                            <TextBlock Text="Copy" FontSize="12"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="#FFFFFF1A"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="12,6"/>
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Command="{Binding QuickSaveCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â¬‡" FontSize="14"/>
                            <TextBlock Text="Quick Save" FontSize="12"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="#14B8A680"/>
                                <Setter Property="BorderBrush" Value="#14B8A64D"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Foreground" Value="#5EEAD4"/>
                                <Setter Property="Padding" Value="12,6"/>
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Command="{Binding SaveAsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="ðŸ’¾" FontSize="14"/>
                            <TextBlock Text="Save As..." FontSize="12"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="#8B5CF6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="16,6"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Row 5: Status Bar (always visible) -->
        <Border Grid.Row="5" Background="#1E1E2E" Padding="16,8">
            <DockPanel>
                <!-- Left: Status Message / Image Dimensions -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Spacing="8">
                    <Ellipse Width="8" Height="8" 
                             Fill="#64748B"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusText, FallbackValue='Ready'}" 
                               Foreground="#94A3B8"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Right: Version Info -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ShareX v4.0" 
                               Foreground="#8B5CF6"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>

</Window>
