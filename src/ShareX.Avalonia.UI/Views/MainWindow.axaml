<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShareX.Ava.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:views="using:ShareX.Ava.UI.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ShareX.Ava.UI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="ShareX Ava"
        Width="1200" Height="800"
        Background="#1E1E2E"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="40"
        Opened="OnWindowOpened">

    <Window.DataTemplates>
        <DataTemplate DataType="{x:Type vm:ProviderCatalogViewModel}">
            <views:ProviderCatalogDialog/>
        </DataTemplate>
    </Window.DataTemplates>

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header Row with Logo (Native Window Buttons are overlayed by OS) -->
        <!-- Header Row with Logo (Native Window Buttons are overlayed by OS) -->
        <Grid Grid.Row="0" Height="40" Background="#1E1E2E" ColumnDefinitions="Auto,*" IsHitTestVisible="False">
            <TextBlock Grid.Column="0" 
                       Text="ShareX Ava" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/> 
        </Grid>

        <!-- Main Navigation Shell -->
        <ui:NavigationView Grid.Row="1" 
                           Name="NavView" 
                           PaneDisplayMode="Left" 
                           IsPaneOpen="True"
                           IsSettingsVisible="False"
                           SelectionChanged="OnNavSelectionChanged">
            <!-- ... existing content ... -->
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Editor" Tag="Editor" IsSelected="True">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Edit"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="History" Tag="History">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Clock"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Workflows" Tag="Workflows">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="List"/>
                    </ui:NavigationViewItem.IconSource>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Settings" Tag="Settings" SelectsOnInvoked="True" IsExpanded="True">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Settings"/>
                    </ui:NavigationViewItem.IconSource>
                    <ui:NavigationViewItem.MenuItems>
                        <ui:NavigationViewItem Content="Application Settings" Tag="Settings_App" />
                        <ui:NavigationViewItem Content="Task Settings" Tag="Settings_Task" />
                        <ui:NavigationViewItem Content="Hotkey Settings" Tag="Settings_Hotkey" />
                        <ui:NavigationViewItem Content="Destination Settings" Tag="Settings_Dest" />
                    </ui:NavigationViewItem.MenuItems>
                 </ui:NavigationViewItem>
                 <ui:NavigationViewItem Content="Debug" Tag="Debug">
                    <ui:NavigationViewItem.IconSource>
                        <ui:SymbolIconSource Symbol="Code"/>
                    </ui:NavigationViewItem.IconSource>
                 </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.Content>
                 <ContentControl Name="ContentFrame" />
            </ui:NavigationView.Content>
        </ui:NavigationView>

        <!-- Modal Overlay Layer (Bootstrap Style) -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              IsVisible="{Binding IsModalOpen}"
              ZIndex="1000">
            <!-- Backdrop -->
            <Border Background="#80000000" PointerPressed="OnBackdropPointerPressed"/>
            
            <!-- Modal Content Wrapper (Scrollable if needed) -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- Modal Dialog -->
                    <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            MinWidth="400" MaxWidth="800"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Margin="20"
                            BoxShadow="0 4 20 0 #40000000">
                        <ContentControl Content="{Binding ModalContent}"/>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>

</Window>
