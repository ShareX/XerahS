<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:XerahS.UI.ViewModels"
             xmlns:views="using:XerahS.UI.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="XerahS.UI.Views.RecordingView"
             x:DataType="vm:RecordingViewModel">
    
    <Design.DataContext>
        <vm:RecordingViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*" Margin="24">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Screen Recording" 
                       FontSize="28" 
                       FontWeight="SemiBold"/>
            <TextBlock Text="Record your screen to MP4 video using native Windows.Graphics.Capture"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                
                <!-- Recording Controls Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    
                    <StackPanel Spacing="16">
                        <TextBlock Text="Recording Controls" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        
                        <!-- Inline Recording Toolbar -->
                        <views:RecordingToolbarView DataContext="{Binding}"/>
                        
                        <!-- Last Error Display -->
                        <Border IsVisible="{Binding LastError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Background="#FFEDD5"
                                BorderBrush="#F97316"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,8">
                            <TextBlock Text="{Binding LastError}"
                                       Foreground="#C2410C"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Output File Path -->
                        <StackPanel IsVisible="{Binding OutputFilePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                    Spacing="4">
                            <TextBlock Text="Output File:"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding OutputFilePath}"
                                       FontFamily="Consolas, monospace"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Instructions Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    
                    <StackPanel Spacing="12">
                        <TextBlock Text="How to Record" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="1. Click 'Start' to begin recording your primary monitor"/>
                            <TextBlock Text="2. Perform actions you want to capture"/>
                            <TextBlock Text="3. Click 'Stop' to end recording and save the video"/>
                        </StackPanel>
                        
                        <TextBlock Text="Note: Recording uses Windows.Graphics.Capture (Windows 10 1803+) with Media Foundation H.264 encoding."
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
    
</UserControl>
