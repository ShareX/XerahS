<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:XerahS.UI.ViewModels"
             xmlns:views="using:XerahS.UI.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="XerahS.UI.Views.RecordingView"
             x:DataType="vm:RecordingViewModel">
    
    <Design.DataContext>
        <vm:RecordingViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*" Margin="24">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Screen Recording"
                       FontSize="28"
                       FontWeight="SemiBold"/>
            <TextBlock Text="{Binding FeatureDescription}"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                
                <!-- Recording Controls Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    
                    <StackPanel Spacing="16">
                        <TextBlock Text="Recording Controls" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        
                        <!-- Inline Recording Toolbar -->
                        <views:RecordingToolbarView DataContext="{Binding}"/>
                        
                        <!-- Last Error Display -->
                        <Border IsVisible="{Binding LastError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Background="#FFEDD5"
                                BorderBrush="#F97316"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,8">
                            <TextBlock Text="{Binding LastError}"
                                       Foreground="#C2410C"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Output File Path -->
                        <StackPanel IsVisible="{Binding OutputFilePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                    Spacing="4">
                            <TextBlock Text="Output File:"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding OutputFilePath}"
                                       FontFamily="Consolas, monospace"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Recording Settings Card (Stage 3) -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">

                    <StackPanel Spacing="16">
                        <TextBlock Text="Recording Settings"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="16">

                            <!-- Codec -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Video Codec:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding AvailableCodecs}"
                                      SelectedItem="{Binding Codec}"
                                      IsEnabled="{Binding !IsRecording}"
                                      HorizontalAlignment="Stretch"
                                      MinWidth="150"/>

                            <!-- FPS -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Frame Rate (FPS):"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding AvailableFPS}"
                                      SelectedItem="{Binding Fps}"
                                      IsEnabled="{Binding !IsRecording}"
                                      HorizontalAlignment="Stretch"
                                      MinWidth="150"/>

                            <!-- Bitrate -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Bitrate (kbps):"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{Binding AvailableBitrates}"
                                      SelectedItem="{Binding BitrateKbps}"
                                      IsEnabled="{Binding !IsRecording}"
                                      HorizontalAlignment="Stretch"
                                      MinWidth="150"/>

                            <!-- Show Cursor -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="Show Cursor:"
                                       VerticalAlignment="Center"/>
                            <CheckBox Grid.Row="3" Grid.Column="1"
                                      IsChecked="{Binding ShowCursor}"
                                      IsEnabled="{Binding !IsRecording}"
                                      Content="Include mouse cursor in recording"/>

                            <!-- Stage 6: Audio Settings -->
                            <!-- System Audio -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                       Text="System Audio:"
                                       VerticalAlignment="Center"/>
                            <CheckBox Grid.Row="4" Grid.Column="1"
                                      IsChecked="{Binding CaptureSystemAudio}"
                                      IsEnabled="{Binding !IsRecording}"
                                      Content="Capture system audio output"/>

                            <!-- Microphone -->
                            <TextBlock Grid.Row="5" Grid.Column="0"
                                       Text="Microphone:"
                                       VerticalAlignment="Center"/>
                            <CheckBox Grid.Row="5" Grid.Column="1"
                                      IsChecked="{Binding CaptureMicrophone}"
                                      IsEnabled="{Binding !IsRecording}"
                                      Content="Capture microphone input"/>

                            <!-- Recording Intent -->
                            <TextBlock Grid.Row="6" Grid.Column="0"
                                       Text="Recording intent:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="6" Grid.Column="1"
                                      ItemsSource="{Binding AvailableRecordingIntents}"
                                      SelectedItem="{Binding RecordingIntent}"
                                      IsEnabled="{Binding !IsRecording}"
                                      HorizontalAlignment="Stretch"
                                      MinWidth="150"/>

                        </Grid>

                        <TextBlock Text="Note: Higher bitrates and frame rates will result in larger file sizes. Hardware encoding may be used automatically if available. Audio capture requires FFmpeg and appropriate system audio devices."
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>

                        <!-- Encoder Info -->
                        <Border Background="{DynamicResource SystemFillColorAttentionBackgroundBrush}"
                                BorderBrush="{DynamicResource SystemFillColorAttentionBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,8,0,0">
                            <StackPanel Spacing="4" Orientation="Horizontal">
                                <PathIcon Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,7H13V9H11V7M11,11H13V17H11V11Z"
                                          Width="16"
                                          Height="16"
                                          Foreground="{DynamicResource SystemFillColorAttentionBrush}"/>
                                <TextBlock Text="{Binding EncoderInfo}"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Instructions Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    
                    <StackPanel Spacing="12">
                        <TextBlock Text="How to Record" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="1. Click 'Start' to begin recording your primary monitor"/>
                            <TextBlock Text="2. Perform actions you want to capture"/>
                            <TextBlock Text="3. Click 'Stop' to end recording and save the video"/>
                        </StackPanel>

                        <TextBlock Text="{Binding UsageNotes}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
    
</UserControl>
