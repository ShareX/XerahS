<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XerahS.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="XerahS.UI.Views.WindowSelectorDialog"
             x:DataType="vm:WindowSelectorViewModel">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <TextBlock Text="Select Window" Theme="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,15"/>

        <Border Grid.Row="1" BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
            <ListBox ItemsSource="{Binding Windows}" 
                     SelectedItem="{Binding SelectedWindow}"
                     SelectionMode="Single" 
                     Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*" Margin="0,4">
                            <!-- Icon place holder: <Image Source="..." Width="16" Height="16" Margin="0,0,10,0"/> -->
                            <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
            <Button Content="Refresh" Command="{Binding RefreshWindowsCommand}" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" />
            <Button Content="Capture" Command="{Binding ConfirmCommand}" Classes="accent" IsDefault="True"/>
        </StackPanel>
    </Grid>
</UserControl>
