<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ShareX.Avalonia.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="ShareX.Avalonia.UI.Views.EffectsPanelView"
             x:DataType="vm:EffectsPanelViewModel">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/EffectParameterTemplates.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#1E1E2E" CornerRadius="8" Padding="16">
        <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Image Effects" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"
                       Margin="0,0,0,16"/>

            <!-- Category Tabs -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <Button Content="Filters" 
                        Click="OnCategoryClick"
                        Tag="Filters"
                        Background="#FFFFFF0D"
                        Foreground="White"
                        Padding="12,6"
                        CornerRadius="6"
                        FontSize="12"/>
                <Button Content="Adjustments" 
                        Click="OnCategoryClick"
                        Tag="Adjustments"
                        Background="#FFFFFF0D"
                        Foreground="White"
                        Padding="12,6"
                        CornerRadius="6"
                        FontSize="12"/>
                <Button Content="Manipulations" 
                        Click="OnCategoryClick"
                        Tag="Manipulations"
                        Background="#FFFFFF0D"
                        Foreground="White"
                        Padding="12,6"
                        CornerRadius="6"
                        FontSize="12"/>
            </StackPanel>

            <!-- Effects List -->
            <Border Grid.Row="2" 
                    Background="#252535" 
                    CornerRadius="6" 
                    Padding="8"
                    Margin="0,0,0,12">
                <ListBox ItemsSource="{Binding AvailableEffects}"
                         SelectedItem="{Binding SelectedEffect}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,6">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"
                                               FontSize="13"/>
                                    <TextBlock Text="{Binding Description}" 
                                               Foreground="#94A3B8" 
                                               FontSize="11"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Parameter Panel -->
            <Border Grid.Row="3"
                    Background="#252535"
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,0,0,12"
                    IsVisible="{Binding SelectedEffect, Converter={x:Static ObjectConverters.IsNotNull}}">
                <ContentControl Content="{Binding SelectedEffect}"
                                ContentTemplate="{StaticResource GenericEffectParameterTemplate}"/>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                <Button Content="Reset" 
                        Click="OnResetClicked"
                        Background="#FFFFFF0D"
                        Foreground="#94A3B8"
                        Padding="16,8"
                        CornerRadius="8"/>
                <Button Content="Apply" 
                        Click="OnApplyClicked"
                        Background="#8B5CF6"
                        Foreground="White"
                        Padding="16,8"
                        CornerRadius="8"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
