<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ShareX.Ava.UI.ViewModels"
             xmlns:controls="using:ShareX.Ava.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="ShareX.Ava.UI.Views.DestinationSettingsView"
             x:DataType="vm:DestinationSettingsViewModel">

    <Grid ColumnDefinitions="200,*">
        <!-- Category Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0"
                Padding="10">
            <StackPanel Spacing="5">
                <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Instance List and Details -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*" Margin="20">
            <!-- Header with Add Button -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                <TextBlock Grid.Column="0" Text="{Binding SelectedCategory.Name}" 
                           FontSize="20" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="+ Add from Catalog" 
                        Command="{Binding SelectedCategory.AddFromCatalogCommand}"/>
            </Grid>

            <!-- Instance List and Details -->
            <Grid Grid.Row="1" RowDefinitions="*,Auto,280">
                <!-- Instance List -->
                <Border Grid.Row="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,0,0,10">
                    <ListBox ItemsSource="{Binding SelectedCategory.Instances}"
                             SelectedItem="{Binding SelectedCategory.SelectedInstance}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Path Grid.Column="0" 
                                          Data="M12,0A12,12,0,1,0,24,12,12,12,0,0,0,12,0ZM10.8,18.6L4.2,12l1.68-1.68L10.8,15.24l7.32-7.32L19.8,9.6Z"
                                          Fill="{DynamicResource AccentFillColorDefaultBrush}"
                                          Width="16" Height="16"
                                          Margin="0,0,8,0"
                                          IsVisible="{Binding IsDefault}"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding FileTypeScopeDisplay}" 
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="â‹®" Padding="8,4" Margin="4,0,0,0">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuItem Header="Set as Default" 
                                                          Command="{Binding $parent[ListBox].DataContext.SelectedCategory.SetAsDefaultCommand}"
                                                          CommandParameter="{Binding}"/>
                                                <MenuItem Header="Duplicate" 
                                                          Command="{Binding $parent[ListBox].DataContext.SelectedCategory.DuplicateInstanceCommand}"
                                                          CommandParameter="{Binding}"/>
                                                <Separator/>
                                                <MenuItem Header="Remove" 
                                                          Command="{Binding $parent[ListBox].DataContext.SelectedCategory.RemoveInstanceCommand}"
                                                          CommandParameter="{Binding}"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Separator Grid.Row="1" Margin="0,10"/>

                <!-- Instance Settings Panel -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,10,0,0"
                        IsVisible="{Binding SelectedCategory.SelectedInstance, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <ScrollViewer>
                        <StackPanel Spacing="10">
                            <TextBlock Text="Instance Settings" FontWeight="SemiBold" FontSize="16"/>
                            
                            <StackPanel Spacing="5">
                                <TextBlock Text="Display Name:" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding SelectedCategory.SelectedInstance.DisplayName}" 
                                         Watermark="Enter display name..."/>
                            </StackPanel>

                            <StackPanel Spacing="5">
                                <TextBlock Text="Provider:" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedCategory.SelectedInstance.ProviderId}" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Spacing="5">
                                <TextBlock Text="Category:" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedCategory.SelectedInstance.Category}" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <!-- File Type Configuration -->
                            <StackPanel Spacing="5" Margin="0,10,0,0">
                                <TextBlock Text="File Type Configuration" FontSize="14" FontWeight="SemiBold"/>
                                <ContentControl Content="{Binding SelectedCategory.SelectedInstance}">
                                    <ContentControl.ContentTemplate>
                                        <DataTemplate>
                                            <controls:FileTypeSelectorControl/>
                                        </DataTemplate>
                                    </ContentControl.ContentTemplate>
                                </ContentControl>
                            </StackPanel>

                            <!-- Provider-specific settings -->
                            <StackPanel Spacing="5" Margin="0,10,0,0">
                                <TextBlock Text="Provider Configuration" FontSize="14" FontWeight="SemiBold"/>
                                <ContentControl Content="{Binding SelectedCategory.SelectedInstance.ConfigView}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Empty State -->
                <StackPanel Grid.Row="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="10"
                            IsVisible="{Binding SelectedCategory.SelectedInstance, Converter={x:Static ObjectConverters.IsNull}}">
                    <TextBlock Text="No instance selected" 
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Select an instance from the list or add a new one" 
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
